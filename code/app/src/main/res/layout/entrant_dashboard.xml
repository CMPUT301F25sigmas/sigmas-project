<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white">

    <!-- Filter Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp"
        android:background="@color/white">

        <Button
            android:id="@+id/filterCurrentButton"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_marginHorizontal="6dp"
            android:backgroundTint="@color/light_purple"
            android:text="Current"
            android:textColor="@color/text_color"
            app:cornerRadius="8dp"/>

        <Button
            android:id="@+id/filterPastButton"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="6dp"
            android:layout_weight="1"
            android:backgroundTint="@color/background_grey"
            android:text="Past"
            android:textColor="@color/text_color"
            app:cornerRadius="8dp" />
    </LinearLayout>

    <!-- Events CardView -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:cardBackgroundColor="#F2F2F2"
        app:cardCornerRadius="24dp"
        app:cardElevation="0dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Events List (shown when there are events) -->
            <ScrollView
                android:id="@+id/events_scroll_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="16dp"
                android:visibility="gone">

                <LinearLayout
                    android:id="@+id/events_container_organizer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Events will be dynamically added here -->

                </LinearLayout>

            </ScrollView>

            <!-- Empty State (shown when there are no events) -->
            <LinearLayout
                android:id="@+id/empty_state"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    android:text="No Events to\ndisplay right now."
                    android:textAlignment="center"
                    android:textColor="#494949"
                    android:textSize="16sp" />
            </LinearLayout>

        </FrameLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
